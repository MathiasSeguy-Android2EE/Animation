<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android2ee.droidcon.greece.animation" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".DrawableActivity"
            android:label="@string/title_activity_drawable"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android2ee.droidcon.greece.animation.MainActivity" />
        </activity>
        <activity
            android:name=".SceneActivity"
            android:label="@string/title_activity_scene"
            android:parentActivityName=".MainActivity"  >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android2ee.droidcon.greece.animation.MainActivity" />
        </activity>
    </application>

</manifest>
